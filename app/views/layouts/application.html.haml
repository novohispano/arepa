!!!
%html
  %head
    %title Arepa
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-top
      .navbar-inner
        .container
          %a.brand Arepa
          .nav-collapse.collapse
            %ul.nav.pull-right
            = link_to "Actualizar Feed", fetch_tweets_path, class: "nav-link"
    .span8.feed
      = yield
